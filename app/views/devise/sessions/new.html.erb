<%
  title t('pages.signun.title')
%>
<section class="form">
<h2>Sign in</h2>

<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
  <%- if resource.errors.any? || flash.any? %>
    <div class="alert <%= flash[:alert].present? ? "alert-error" : "" %>">
      <a class="close" data-dismiss="alert">x</a>
      <%= flash[:alert] || flash[:notice] %>
    </div>
  <%- end %>

  <%= render "layouts/form_element", resource: resource, 
                                         attr: :username,
                                            f: f           %>

  <%= render "layouts/form_element", resource: resource, 
                                         attr: :password,
                                         type: :password_field,
                                            f: f           %>

  <% if devise_mapping.rememberable? -%>
  <%= render "layouts/form_element", resource: resource, 
                                         attr: :remember_me,
                                         type: :check_box,
                                            f: f           %>
  <% end -%>

  <div><%= f.submit t('pages.signin.submit'), disable_with: "Signing in...", class: "btn btn-success btn-block" %></div>
<% end %>

<%= render "devise/shared/links" %>
</section>
